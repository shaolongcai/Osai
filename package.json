{
  "productName": "Osai",
  "homepage": "./",
  "type": "module",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "wait-on": "^8.0.4"
  },
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run frontend:dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "frontend:dev": "cd frontend && npm run dev",
    "rebuild": "electron-rebuild",
    "make": "electron-forge make",
    "start": "electron-forge start",
    "package": "electron-forge package"
  },
  "name": "osai",
  "version": "0.1.0",
  "description": "a search app by ai",
  "main": "dist-electron/main.js",
  "license": "none",
  "private": true,
  "dependencies": {
    "@lancedb/lancedb": "^0.22.0",
    "better-sqlite3": "^12.2.0",
    "dayjs": "^1.11.18",
    "electron-squirrel-startup": "^1.0.1",
    "node-llama-cpp": "^3.13.0",
    "systeminformation": "^5.27.9"
  },
  "build": {
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "author": {
    "name": "蔡包",
    "email": "your.email@example.com"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Osai",
        "executableName": "Osai",
        "prune": true,
        "quiet": false,
        "icon": "./dist-electron/resources/assets/logo-256",
        "asar": {
          "unpack": "**/node_modules/@lancedb/**"
        },
        "extraResource": [
          "dist-electron/resources/pythonScript",
          "dist-electron/resources/python"
        ],
        "ignore": [
          "^/electron/resources/check_gpu.py",
          "^/electron/resources/get-pip.py",
          "^/electron($|/)",
          "^/frontend/(?!dist($|/))",
          "^/\\.git($|/)",
          "^/\\.vscode($|/)",
          "\\.log$",
          "^/node_modules/\\.cache($|/)",
          "__pycache__",
          "^/venv($|/)"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Osai"
          }
        }
      ],
      "publishers": [],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-fuses",
          "config": {
            "version": "1",
            "resetAdHocDarwinSignature": false,
            "[FuseV1Options.RunAsNode]": false,
            "[FuseV1Options.EnableCookieEncryption]": true,
            "[FuseV1Options.EnableNodeOptionsEnvironmentVariable]": false,
            "[FuseV1Options.EnableNodeCliInspectArguments]": false,
            "[FuseV1Options.EnableEmbeddedAsarIntegrityValidation]": true,
            "[FuseV1Options.OnlyLoadAppFromAsar]": true
          }
        }
      ]
    }
  }
}
