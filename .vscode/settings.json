{
  // i18n Ally 配置
  "i18n-ally.localesPaths": [
    "frontend/src/i18n/locales"
  ],
  "i18n-ally.pathMatcher": "frontend/src/i18n/locales/{locale}/{namespace}.json",
  "i18n-ally.namespace": true,
  "i18n-ally.defaultNamespace": "app",
  "i18n-ally.namespaceSeparator": ":",
  "i18n-ally.keySeparator": ".",
  "i18n-ally.sourceLanguage": "zh-CN",
  "i18n-ally.displayLanguage": "zh-CN",
  "i18n-ally.enabledFrameworks": ["custom"],
  
  // Stylelint 配置
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss",
    "sass"
  ],
  "stylelint.configFile": "frontend/.stylelintrc.json",
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  
  // Tailwind CSS IntelliSense 配置
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**"
  ]
}
