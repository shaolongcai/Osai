{
  // Stylelint 配置
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "scss",
    "sass"
  ],
  "stylelint.configFile": "frontend/.stylelintrc.json",
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  
  // Tailwind CSS IntelliSense 配置
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**"
  ],
  
  // i18n Ally 配置
  "i18n-ally.localesPaths": [
    "frontend/src/i18n/locales"
  ],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.pathMatcher": "{locale}.json",
  "i18n-ally.enabledFrameworks": [
    "general"
  ],
  "i18n-ally.sourceLanguage": "zh-CN",
  "i18n-ally.displayLanguage": "zh-TW",
  "i18n-ally.enabledParsers": [
    "json"
  ],
  "i18n-ally.sortKeys": true,
  "i18n-ally.keepFulfilled": true,
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.annotations.inPlace": true,
  "i18n-ally.annotations.maxLength": 30,
  "i18n-ally.usage.scanningIgnore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/dist-electron/**",
    "**/.git/**"
  ]
}
